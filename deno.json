{
	"fmt": {
		"indentWidth": 4,
		"useTabs": true,
		"lineWidth": 120,
		"proseWrap": "preserve",
		"singleQuote": true,
		"exclude": [
			"build/**",
			"test/Ploiu.js",
			"README.md",
			"**/*.html"
		]
	},
	"lint": {
		"exclude": [
			"./build/**",
			"./test/Ploiu.js"
		]
	},
	"tasks": {
		"build": "deno lint; deno fmt; deno run --allow-read --allow-write --allow-env --allow-run ./build.js"
	},
	"imports": {
		"@libs/bundle": "jsr:@libs/bundle@^12.4.1",
		"@std/fmt": "jsr:@std/fmt@^1.0.3",
		"lightningcss-wasm": "npm:lightningcss-wasm@^1.28.1"
	}
}
