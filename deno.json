{
  "fmt": {
    "indentWidth": 2,
    "useTabs": false,
    "lineWidth": 120,
    "proseWrap": "preserve",
    "singleQuote": true,
    "semiColons": false,
    "exclude": [
      "build/**",
      "test/Ploiu.js",
      "README.md",
      "**/*.html"
    ]
  },
  "lint": {
    "exclude": [
      "./build/**",
      "./test/Ploiu.js"
    ]
  },
  "tasks": {
    "build": "deno lint; deno fmt; deno run --allow-read --allow-write='./build' --allow-env --allow-run ./build.js"
  },
  "imports": {
    "@libs/bundle": "jsr:@libs/bundle@^12.6.5",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "lightningcss-wasm": "npm:lightningcss-wasm@^1.30.1"
  }
}
